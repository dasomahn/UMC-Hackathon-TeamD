<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.townLife.TownLifeArticleActivity"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/town_life_article_btn_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginVertical="15dp"

        android:src="@drawable/ic_left_arrow"

        app:layout_constraintBottom_toTopOf="@id/town_life_article_scroll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/town_life_article_btn_home"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginVertical="15dp"

        android:src="@drawable/ic_home_inactivate"

        app:layout_constraintStart_toEndOf="@id/town_life_article_btn_back"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/town_life_article_btn_more"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginVertical="15dp"

        android:src="@drawable/icon_ads_more"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/town_life_article_btn_heart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginVertical="15dp"

        android:src="@drawable/ic_heart"

        app:layout_constraintEnd_toStartOf="@id/town_life_article_btn_more"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/town_life_article_btn_alarm"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginVertical="15dp"

        android:src="@drawable/ic_alarm"

        app:layout_constraintEnd_toStartOf="@id/town_life_article_btn_heart"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/town_life_article_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"

        app:layout_constraintTop_toBottomOf="@id/town_life_article_btn_back"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/town_life_article_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F2F3F7"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:padding="5dp"

                android:text="카테고리"
                android:textSize="10sp"
                android:gravity="center"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="15dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/town_life_article_img_profile"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"

                    android:src="@drawable/ic_user_profile_placeholder"

                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/town_life_article_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="10dp"

                    android:text="닉네임입니다"
                    android:textColor="@color/black"
                    android:textSize="12sp"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/town_life_article_info"
                    app:layout_constraintStart_toEndOf="@id/town_life_article_img_profile"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/town_life_article_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="10dp"

                    android:text="지역 인증 시간"
                    android:textSize="12sp"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/town_life_article_nickname"
                    app:layout_constraintStart_toEndOf="@id/town_life_article_img_profile"/>



            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="15dp"

                android:background="#F2F3F7"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="15dp"

                android:text="내용입니다"
                android:textColor="@color/black"
                android:textSize="16sp"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>