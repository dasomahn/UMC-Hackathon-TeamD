<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.main.townLife.TownLifeCategoryActivity"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/town_life_category_btn_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginVertical="15dp"

        android:src="@drawable/ic_left_arrow"

        app:layout_constraintBottom_toTopOf="@id/town_life_category_img_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/town_life_category_img_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginVertical="15dp"

        android:src="@drawable/ic_category_new"

        app:layout_constraintTop_toBottomOf="@id/town_life_category_btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/town_life_category_margin"/>
    
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"

        android:text="카테고리입니다"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="@id/town_life_category_img_icon"
        app:layout_constraintBottom_toBottomOf="@id/town_life_category_img_icon"
        app:layout_constraintStart_toEndOf="@+id/town_life_category_img_icon"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/town_life_category_btn_join"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginEnd="15dp"

        android:text="참여중"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:drawableStart="@drawable/ic_check"
        android:backgroundTint="#F2F3F7"

        app:layout_constraintTop_toTopOf="@id/town_life_category_img_icon"
        app:layout_constraintBottom_toBottomOf="@id/town_life_category_img_icon"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/town_life_category_margin"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#F2F3F7"

        app:layout_constraintTop_toBottomOf="@id/town_life_category_img_icon"
        app:layout_constraintBottom_toTopOf="@id/main_body"
        />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_body"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/town_life_category_margin"
        app:layout_constraintVertical_bias="1.0">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginVertical="10dp"

                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                tools:listitem="@layout/item_keyword">

            </androidx.recyclerview.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#F6F6F6" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/main_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                tools:listitem="@layout/item_town_life_category_article" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>