<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".src.main.myPage.MyPageFragment"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/my_page_btn_setting"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginVertical="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/white"

        android:src="@drawable/ic_setting"
        android:scaleType="centerCrop"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/my_page_scroll"
        />

    <ScrollView
        android:id="@+id/my_page_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"

        app:layout_constraintTop_toBottomOf="@id/my_page_btn_setting"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                >

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/my_page_layout_profile_bar"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"

                    android:orientation="horizontal"

                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/my_page_img_profile_image"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"

                        android:src="@drawable/ic_user_profile_placeholder"

                        />

                    <TextView
                        android:id="@+id/my_page_txt_nickname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="9"
                        android:paddingHorizontal="10dp"

                        android:text="아이디입니다"
                        android:textStyle="bold"
                        android:gravity="center_vertical"
                        android:textColor="@color/black"

                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/my_page_btn_profile"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginVertical="2dp"
                        android:backgroundTint="#F2F3F7"

                        android:text="프로필 보기"
                        android:textStyle="bold"
                        android:textSize="8sp"
                        android:textColor="@color/black"
                        android:gravity="center"

                        />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/my_page_layout_pay"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/round_shape_background_my_page"

                    app:layout_constraintTop_toBottomOf="@id/my_page_layout_profile_bar"
                    app:layout_constraintStart_toStartOf="parent"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/my_page_img_right_arrow"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"

                        android:src="@drawable/ic_chevron_right_outline_18"

                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginStart="15dp"

                        android:text="당근하는 새로운 방법, 당근페이!"
                        android:textSize="14sp"
                        android:gravity="center_vertical"

                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/my_page_btn_charge"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#F2F3F7"
                        app:layout_constraintWidth_percent="0.46"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="5dp"

                        android:text="충전"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"

                        android:elevation="100dp"

                        android:src="@drawable/ic_plus"
                        app:layout_constraintStart_toStartOf="@id/my_page_btn_charge"
                        app:layout_constraintTop_toTopOf="@id/my_page_btn_charge"
                        app:layout_constraintBottom_toBottomOf="@id/my_page_btn_charge"
                        android:layout_marginStart="60dp"
                        />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/my_page_btn_send"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#F2F3F7"
                        app:layout_constraintWidth_percent="0.46"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="5dp"

                        android:text="계좌송금"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="12sp"

                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />



                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"

                android:text="나의 거래"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:src="@drawable/ic_buy_list"
                    android:scaleType="centerInside"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingHorizontal="10dp"

                    android:text="판매내역"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:src="@drawable/ic_shopping"
                    android:scaleType="centerInside"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingHorizontal="10dp"

                    android:text="구매내역"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:src="@drawable/ic_heart"
                    android:scaleType="centerInside"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingHorizontal="10dp"

                    android:text="관심목록"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:src="@drawable/ic_account_book"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingHorizontal="10dp"

                    android:text="당근가계부"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10dp"

                android:background="#F2F3F7"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:text="나의 동네생활"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:src="@drawable/ic_my_writing"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingHorizontal="10dp"

                    android:text="동네생활 글/댓글"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10dp"

                android:background="#F2F3F7"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:text="나의 비즈니스"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:src="@drawable/ic_write_ad"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingHorizontal="10dp"

                    android:text="비즈프로필 관리"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:src="@drawable/ic_mydaangn_notice_outline_24"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingHorizontal="10dp"

                    android:text="광고"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:src="@drawable/ic_write_ad"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingHorizontal="10dp"

                    android:text="동네홍보 글"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10dp"

                android:background="#F2F3F7"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:text="기타"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center_vertical"
                />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:src="@drawable/ic_mydaangn_location_outline_24"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingHorizontal="10dp"

                    android:text="내 동네 설정"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:src="@drawable/ic_mydaangn_certification_outline_24"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingHorizontal="10dp"

                    android:text="동네 인증하기"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:src="@drawable/ic_tag"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingHorizontal="10dp"

                    android:text="알림 키워드 설정"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:src="@drawable/ic_mydaangn_help_outline_24"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingHorizontal="10dp"

                    android:text="자주 묻는 질문"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"

                    android:src="@drawable/ic_mydaangn_invite_outline_24"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:paddingHorizontal="10dp"

                    android:text="친구초대"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginVertical="10dp"

                android:background="#F2F3F7"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>